
<div class="one-team">
    <div class="playername"><span>@PlayerName</span></div>
    <div class="bignumbercontainer"><span class="bignumber" @onclick="OnBigNumberClick">@Number</span></div>
</div>


@code {
    [Parameter]
    public string PlayerName { get; set; } = string.Empty;

    [Parameter]
    public bool IsRight { get; set; } = false;


    private string Number = "9";


    protected override Task OnInitializedAsync()
    {
        return base.OnInitializedAsync();
    }

    private Task OnBigNumberClick()
    {
        Number = (int.Parse(Number) + 1).ToString();
        return Task.CompletedTask;

    }
}